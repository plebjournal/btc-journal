<%= form_with(model: transaction) do |form| %>
  <div>
    <%= form.label :transaction_date %>
    <%= form.datetime_field :transaction_date, value: DateTime.current.strftime('%Y-%m-%dT%H:%M') %>
  </div>
  <div>
    <%= form.label :transaction_type %>
    <%= form.select :transaction_type, ['buy', 'sell'] %>
  </div>
  <div>
    <%= form.label(:btc, 'BTC (Sats)') %>
    <%= form.number_field :btc, value: 0 %>
  </div>
  <div>
    <%= form.label(:fiat, 'Fiat') %>
    <%= form.number_field :fiat, value: 0 %>
  </div>
  <div>
    <%= form.label(:fiat_currency_id, 'Fiat Currency') %>
    <%= form.select :fiat_currency_id, FiatCurrency.all.pluck(:code, :id)%>
  </div>

  <% if transaction.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(transaction.errors.count, "error") %> prohibited this transaction from being saved:</h2>

      <ul>
        <% transaction.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.submit %>
  </div>
<% end %>
